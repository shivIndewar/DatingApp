@model API.DTOs.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset password";
}

@section Styles {

    <style>
        .sec-wrapper {
            background: #fff;
            padding: 1.5rem;
            border: 1px solid #eaecec;
            box-shadow: 0 2px 2px rgba(0, 0, 0, 0.1);
            border-radius: .25rem;
            max-width: 500px;
            margin: 5% auto 14px;
        }

        .form-control {
            color: #324148;
            border-width: 2px;
            border-color: #eaecec;
            padding: .375rem .75rem;
            height: calc(2.25rem + 4px);
        }

        .register-logo {
            color: #000;
            font-size: 1.5rem;
            text-align: center;
        }
    </style>
}
<div class="sec-wrapper">
    <div class="container">
        <div class="reset-password mb-5">
                <div class="register-logo mb-3">
                    <a border="0" style="border:none;text-decoration:none;">Password Reset</a>
                </div>
            <form method="post" id="resetPasswordForm" name="resetPasswordForm" action="@Url.Action( "UpdatePassword", "Password")">
                <input name="Token" type="hidden" value="@Model.Token" />
                    <input name="Email" id="email" type="hidden" value="@Model.Email" class="form-control" placeholder="Email" />
                </div>
                <div class="form-group has-feedback">
                    <label>Password</label>
                    <input name="Password" id="password" type="password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" id="passValidation" class="text-danger"></span>
                </div>
                <div class="form-group has-feedback">
                    <label>ConfirmPassword</label>
                    <input name="ConfirmPassword" id="cpassword" type="password" class="form-control" placeholder="Retype password" />
                    <span asp-validation-for="ConfirmPassword" id="cpassValidation" class="text-danger"></span>
                </div>
                <div class="text-center mt-3">
                    <button type="submit" id="submit" class="btn btn-primary btn-flat" style="min-width: 150px">Submit</button>
                </div>
            </form>
        </div>
        <div class="border p-2">
            <p class="pl-2"><i class="fas fa-star mr-2 text-danger"></i>At least one upper case English letter</p>
            <p class="pl-2"><i class="fas fa-star mr-2 text-danger"></i>At least one lower case English letter</p>
            <p class="pl-2"><i class="fas fa-star mr-2 text-danger"></i>At least one digit</p>
            <p class="pl-2"><i class="fas fa-star mr-2 text-danger"></i>At least one special character</p>
            <p class="pl-2"><i class="fas fa-star mr-2 text-danger"></i>Minimum eight in length</p>
        </div>
    </div>
    <div class="text-center mt-3">
        <a id="home" href="https://localhost:4200" class="btn btn-success btn-flat text-white" style="min-width: 150px">Login</a>
    </div>
</div>

@section Scripts {
    <script src="~/lib/custom/js/account/forgot-password.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")

}
